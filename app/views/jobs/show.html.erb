<div class="h-100 p-5 bg-light rounded-3">
	<h1 class="display-6"><%= @job.title %></h1>
	<hr class="my-4">
	<h5>Description:</h5>
	<p>
	  <h6><%= @job.description %></h6>
	</p>
</div>
<br/>
<% if can? :manage, @job %>
	<%= link_to 'Edit', edit_job_path(@job), class:"btn btn-secondary" %>
	<%= link_to 'Delete Job', @job, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
<% end %>
<br/>
<br/>
<%= link_to 'Back', jobs_path, class:"btn btn-dark" %>
